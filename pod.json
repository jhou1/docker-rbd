{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd1",
        "labels": {
            "name": "rbd"
        }
    },
    "spec": {
        "containers": [{
            "name": "rbd",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "name": "rbd",
                "mountPath": "/mnt/rbd"
            }]
        }],
        "securityContext": {
            "runAsUser": 101010,
            "fsGroup": 123456
        },
        "volumes": [{
            "name": "rbd",
            "persistentVolumeClaim": {
                "claimName": "pvc-rbd-server"
            }
        }]
    }
}
