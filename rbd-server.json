{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd-server",
        "labels": {
            "storage": "rbd-server"
        }
    },
    "spec": {
        "hostNetwork": true,
        "selector": {
            "role": "rbd-server"
        },
        "containers": [
            {
                "name": "rbd-server",
                "image": "aosqe/rbd",
                "ports": [{
                    "containerPort": 6789,
                    "hostPort": 6789
                }],
                "securityContext": {
                    "privileged": true
                },
                "volumeMounts": [
                    {
                        "mountPath": "/lib/modules",
                        "name": "kernel"
                    },
                    {
                        "mountPath": "/sys",
                        "name": "sys"
                    },
                    {
                        "mountPath": "/dev",
                        "name": "dev"
                    }
                ],
                "imagePullPolicy": "IfNotPresent",
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "ceph",
                            "health"
                        ]
                    },
                    "initialDelaySeconds": 30,
                    "timeoutSeconds": 1
                }
            }
        ],
        "volumes": [
            {
                "name": "kernel",
                "hostPath": {
                    "path": "/lib/modules"
                }
            },
            {
                 "name": "sys",
                 "hostPath": {
                     "path": "/sys"
                 }
            },
            {
                 "name": "dev",
                 "hostPath": {
                     "path": "/dev"
                 }
            }
        ]
    }
}
